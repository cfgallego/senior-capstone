<!DOCTYPE html>
<html ng-app="app">
<head>
    <base href="/" />
    <meta name="viewport" content="width=device-width" />
    <title>SCP 2018</title>
    <link rel="icon" href="Content/images/truck2.png" />
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    @Styles.Render("~/content/css")
    @Scripts.Render("~/bundles/all")
</head>
<body ng-controller="initialController as self" class="body-content">
    <div id="wrapper">
        <!-- nav bar -->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-left" id="logo"><img src="Content/images/truck2.png"></a>
                <a id="scp" class="navbar-brand" href="/" style="">Responder Management System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <div>
                        <ul class="navbar-nav" id="itemsLeftNav">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Home</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Contacts</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/addVolunteer">Add</a>
                                    <a class="dropdown-item" href="/search">Search</a>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/history">History</a>
                            </li>
                        </ul>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link"  href="Url.Action("Account","Login")">Logout</a>
                            </li>
                            <!-- <li>@Html.ActionLink("Logout", "Login", "Account")</li> -->
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <!--end nav bar-->

        <div class="container" style="background-color: white; padding-top: 20px;">
            <div ng-view id="main"></div> @* html pages will be displayed here *@
        </div>

        @Scripts.Render("~/bundles/controllers")
        <script src="~/ScriptsAppSpecific/appServices.js"></script>

        <footer class="container" style="background-color: white;">
            Copyright &copy; Spring 2018<br>
            <hr>
            Team 4 Senior Capstone Project<br>
            Augusta University<br>
        </footer>
    </div>
</body>
</html>